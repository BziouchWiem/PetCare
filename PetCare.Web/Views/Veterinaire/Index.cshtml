@model IEnumerable<PetCare.Models.Veterinaire>

@{
    ViewData["Title"] = "Liste des Vétérinaires";
}

<style>
    .container {
        background-color: #FFFFFF;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #ffff;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

        .card-header h2 {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            font-weight: 500;
            color: #333;
            margin-bottom: 0;
        }

    .card-body {
        padding: 20px;
    }

    .alert-success {
        background-color: #B5EAD7;
        border-color: #B5EAD7;
        color: #333;
        border-radius: 8px;
    }

    .alert-danger {
        background-color: #FF6F61;
        border-color: #FF6F61;
        color: #fff;
        border-radius: 8px;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
    }

        .table th {
            background-color: #FFD1DC;
            color: #333;
        }

            .table th.actions-column {
                text-align: right;
                padding-right: 20px;
            }

        .table td {
            vertical-align: middle;
        }

        .table tr:nth-child(even) {
            background-color: #F5F5DC;
        }

        .table td.actions-column {
            text-align: right;
            padding-right: 20px;
        }

    .action-btn {
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: transform 0.1s;
        text-decoration: none;
        display: inline-block;
        margin-left: 5px;
    }

        .action-btn:hover {
            transform: scale(1.05);
        }

    .edit-btn {
        background-color: #AED9E0;
        color: #333;
    }

    .delete-btn {
        background-color: #FFD1DC;
        color: #333;
    }

    .add-btn {
        background-color: #4A90E2;
        color: #fff;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
    }

    .no-veterinaires {
        text-align: center;
        color: #4A90E2;
        font-style: italic;
    }

        .no-veterinaires i {
            font-size: 1.5rem;
            margin-right: 5px;
        }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn add-btn">Ajouter un Vétérinaire</a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Spécialité</th>
                        <th class="actions-column">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nom</td>
                            <td>@item.Specialite</td>
                            <td class="actions-column">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn edit-btn"><i class="fas fa-edit"></i> Modifier</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn delete-btn"><i class="fas fa-trash"></i> Supprimer</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-veterinaires"><i class="fas fa-user-md"></i> Oups, aucun vétérinaire trouvé... Ajoutons-en un !</p>
        }
    </div>
</div>