@model PetCare.Models.Animal

@{
    ViewData["Title"] = "Supprimer un Animal";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <h4>Êtes-vous sûr de vouloir supprimer cet animal ?</h4>
        <dl class="row">
            <dt class="col-sm-2">Nom</dt>
            <dd class="col-sm-10">@Model.Nom</dd>
            <dt class="col-sm-2">Âge</dt>
            <dd class="col-sm-10">@Model.Age</dd>
            <dt class="col-sm-2">Propriétaire</dt>
            <dd class="col-sm-10">@Model.Proprietaire?.Nom</dd>
            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.TypeAnimal?.Libelle</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Supprimer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>