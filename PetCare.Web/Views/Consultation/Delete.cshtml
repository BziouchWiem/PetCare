@model PetCare.Models.Consultation

@{
    ViewData["Title"] = "Supprimer une Consultation";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <h4>Êtes-vous sûr de vouloir supprimer cette consultation ?</h4>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.DateConsultation.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-2">Diagnostic</dt>
            <dd class="col-sm-10">@Model.Diagnostic</dd>
            <dt class="col-sm-2">Animal</dt>
            <dd class="col-sm-10">@Model.Animal?.Nom</dd>
            <dt class="col-sm-2">Vétérinaire</dt>
            <dd class="col-sm-10">@Model.Veterinaire?.Nom</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Supprimer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>