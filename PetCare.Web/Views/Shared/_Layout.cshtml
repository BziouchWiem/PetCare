<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PetCare - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&family=Pacifico&display=swap" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #FFFFFF; /* Fond blanc pur pour toute la page */
        }

        body {
            display: flex;
            flex-direction: column;
            padding-top: 70px; /* Espace pour la navbar fixe */
            padding-bottom: 50px; /* Espace pour le footer fixe */
        }

        .navbar {
            background-color: #AED9E0;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-family: 'Pacifico', cursive;
            font-size: 1.5rem;
            color: #4A90E2 !important;
        }

        .navbar-brand i {
            margin-right: 5px;
        }

        .navbar-nav .nav-link {
            color: #495057 !important;
            transition: transform 0.2s;
        }

        .navbar-nav .nav-link:hover {
            color: #4A90E2 !important;
            transform: scale(1.05);
        }

        .navbar-nav .nav-link i {
            margin-right: 5px;
        }

        .welcome-hero {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/dog-park.jpg');
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            margin-top: -20px;
        }

            .welcome-hero .overlay {
                background: transparent; /* Removed the dark background since we have a gradient */
                padding: 30px;
                border-radius: 10px;
            }

            .welcome-hero h1, .welcome-hero p {
                color: white;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); /* Stronger shadow for better readability */
            }

        .btn-hero {
            background-color: #4A90E2;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 25px;
            transition: transform 0.3s, background-color 0.3s;
        }

            .btn-hero:hover {
                background-color: #3b79c2;
                transform: scale(1.1);
            }

        .btn-action {
            display: inline-block;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            font-size: 1.2rem;
            transition: transform 0.3s, background-color 0.3s;
        }

            .btn-action:hover {
                transform: scale(1.05);
                background-color: #e9f1fa;
            }

        .icon-action {
            transition: transform 0.3s;
        }

        .btn-action:hover .icon-action {
            transform: rotate(15deg); /* Slight rotation on hover for a playful effect */
        }

        .carousel-item img.carousel-img {
            border-radius: 10px;
            height: 300px;
            object-fit: cover;
            border: 2px solid #AED9E0; /* Subtle border to match the theme */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow for depth */
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.7); /* Slightly darker for better contrast */
            border-radius: 5px;
            padding: 10px;
        }

            .carousel-caption h5, .carousel-caption p {
                color: #fff;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
            }

        .welcome-section {
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, #AED9E0 0%, #BFE3E8 100%); /* Subtle gradient for depth */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

            .welcome-section i {
                font-size: 2.5rem;
                color: #4A90E2;
                margin-bottom: 15px;
            }

            .welcome-section h2 {
                color: #333;
                font-family: 'Pacifico', cursive;
                font-size: 2rem;
            }

            .welcome-section p {
                color: #495057;
                font-size: 1.1rem;
            }

        .container {
            margin-top: 20px;
            flex: 1 0 auto; /* Permet au contenu de pousser le footer vers le bas */
            background-color: #FFFFFF; /* Fond blanc pour le contenu */
        }

        .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #4A90E2;
            border-color: #4A90E2;
            border-radius: 8px;
        }

        .btn-primary:hover {
            background-color: #3b79c2;
            border-color: #3b79c2;
        }

        h1 {
            font-family: 'Pacifico', cursive;
            color: #4A90E2;
        }

        p a {
            color: #4A90E2;
            text-decoration: none;
            font-weight: 500;
        }

        p a:hover {
            color: #FFD1DC;
        }

        .welcome-section {
            text-align: center;
            padding: 20px;
            background-color: #FFD1DC;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .welcome-section i {
            font-size: 2rem;
            color: #4A90E2;
            margin-bottom: 10px;
        }

        .footer {
            background-color: #FFFFFF; /* Fond blanc pour le footer */
            padding: 10px;
            border-radius: 8px;
            flex-shrink: 0;
        }

        .footer a {
            color: #4A90E2;
            text-decoration: none;
        }

        .footer a:hover {
            color: #FFD1DC;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><i class="fas fa-paw"></i> PetCare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Animal" asp-action="Index"><i class="fas fa-paw"></i> Animaux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Proprietaire" asp-action="Index"><i class="fas fa-user"></i> Propriétaires</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TypeAnimal" asp-action="Index"><i class="fas fa-cat"></i> Types d'Animaux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Veterinaire" asp-action="Index"><i class="fas fa-stethoscope"></i> Vétérinaires</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Consultation" asp-action="Index"><i class="fas fa-calendar-alt"></i> Consultations</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            © 2025 - PetCare - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>